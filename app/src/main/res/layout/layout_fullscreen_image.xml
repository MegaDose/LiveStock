<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <za.co.megadose.selfography.helper.TouchImageView
        android:id="@+id/imgDisplay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_overlay_top"
        android:layout_alignParentTop="true"
        android:padding="10dp">

        <ImageView
            android:id="@+id/btnRotRight"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/rotate_right"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"

            />

        <ImageView
            android:id="@+id/btnRotLeft"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/rotate_left"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btnRotRight"
            android:layout_marginLeft="20dp"

            />
    <TextView
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="#a1a1a1"
        android:text="Close"
        android:textSize="20dp"
        android:fontFamily="sans-serif-light"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toLeftOf="@+id/btnClose"
        android:layout_marginRight="15dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="#a1a1a1"
        android:text="Delete"
        android:textSize="20dp"
        android:fontFamily="sans-serif-light"
        android:layout_centerVertical="true"
        />

        </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp">
    <ImageView
        android:id="@+id/btnShare"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_action_share"
        android:scaleType="fitXY"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"

        />

    <ImageView
        android:id="@+id/btnUpload"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_upload_btn"
        android:scaleType="fitXY"

        />
    </LinearLayout>

</RelativeLayout>